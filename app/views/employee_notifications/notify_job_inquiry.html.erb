<p>-----------------------------------------------------------------------</p>
<p>You have received a job inquiry from <%= @job_inquiry.name %>.</p>

<p>-----------------------------------------------------------------------</p>

<p>Job: <%= link_to @job.name,
										job_url(@job, :only_path => false),
										:title => "Visit the job page" %></p>

<p>
	Name: <%= @job_inquiry.try(:name) %>
</p>

<% if @candidate.present? %>
<p>
	Candidate: <%= link_to @candidate.name,
												 candidate_url(@candidate, :only_path => false),
												 :title => "Visit the candidate page" %>
</p>
<% end %>

<p><%= @job_inquiry.email_type.titleize %> Email: <%= @job_inquiry.email_address %></p>

<p>Title: <%= @job_inquiry.title %></p>

<p>Company: <%= @job_inquiry.company %></p>

<p><%= @job_inquiry.phone_type.titleize %> Phone: <%= @job_inquiry.formated_phone_number %></p>

<p>
	<%= @job_inquiry.address_type.titleize %> Address: <br/>
	<%= @job_inquiry.line_1 %> <br/>
	<% if @job_inquiry.line_2.present? %>
	<%= @job_inquiry.line_2 %> <br/>
	<% end %>
	<% if @job_inquiry.line_3.present? %>
	<%= @job_inquiry.line_3 %> <br/>
	<% end %>
	<%= @job_inquiry.city %>, <%= @job_inquiry.region %> <%= @job_inquiry.zip %>
</p>

<% if @job_inquiry.comments.present? %>
<span>Comments: <br/></span>
<%= simple_format strip_tags(@job_inquiry.comments) %>
<% end %>

